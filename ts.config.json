{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "target": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "esnext",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "useTranspileModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
